<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".colour">

    <TextView
        android:id="@+id/pcolour"
        android:layout_width="206dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundbuttonsach2"
        android:paddingTop="4dp"
        android:text="COLOURS"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/red"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/inputcolour1"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcolour"
        app:srcCompat="@drawable/sred" />

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="99dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/colourbutton"
        app:layout_constraintEnd_toStartOf="@+id/inputcolour5"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pink"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/syellow" />

    <ImageView
        android:id="@+id/green"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@+id/inputcolour2"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red"
        app:srcCompat="@drawable/sgreen" />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@+id/inputcolour3"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green"
        app:srcCompat="@drawable/sblue" />

    <ImageView
        android:id="@+id/pink"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@+id/inputcolour4"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue"
        app:srcCompat="@drawable/spink" />

    <EditText
        android:id="@+id/inputcolour1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="enter colour name"
        android:textColor="#6A6A6A"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcolour" />

    <EditText
        android:id="@+id/inputcolour2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="enter colour name"
        android:textColor="#6A6A6A"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputcolour1" />

    <EditText
        android:id="@+id/inputcolour3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="enter colour name"
        android:textColor="#6A6A6A"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputcolour2" />

    <EditText
        android:id="@+id/inputcolour4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="enter colour name"
        android:textColor="#6A6A6A"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputcolour3" />

    <EditText
        android:id="@+id/inputcolour5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="enter colour name"
        android:textColor="#6A6A6A"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/colourbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputcolour4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/colourbutton"
        android:layout_width="184dp"
        android:layout_height="43dp"
        android:layout_marginBottom="16dp"
        android:background="#027731"
        android:text="Finish"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>